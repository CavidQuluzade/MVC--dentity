﻿﻿@using İdentity.Areas.Admin.Models.Message
@model MessageSendVM

<form method="post" asp-action="send" asp-controller="message">
    <div class="form-group">
        <label asp-for="Tittle"></label>
        <input asp-for="Tittle" class="form-control" placeholder="Enter title" />
        <span asp-validation-for="Tittle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Enter title" /></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>